{
  "name": "@rexd/core",
  "version": "0.3.0-alpha.3",
  "description": "A responsive and adaptive components library, with ability to config theme and color mode.",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "preversion": "yarn test && yarn build",
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist/",
    "build": "yarn build:esm",
    "build:esm": "tsc --project tsconfig.production.json --outDir dist/esm/ --module ES2015",
    "build:cjs": "tsc --project tsconfig.production.json --outDir dist/cjs/ --module CommonJS",
    "build-theme": "node ./scripts/generate-theme.js"
  },
  "license": "MIT",
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@emotion/serialize": "^1.0.2",
    "@emotion/sheet": "^1.0.1",
    "@popperjs/core": "^2.6.0",
    "@rexd/icon": "^0.3.0-alpha.2",
    "@rexd/one": "^0.3.0-alpha.1",
    "@types/d3": "^6.3.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/styled-components": "^5.1.7",
    "ali-react-table": "^2.4.0",
    "classnames": "^2.2.6",
    "csstype": "^3.0.7",
    "d3-color": "^2.0.0",
    "dayjs": "^1.10.4",
    "lodash": "^4.17.20",
    "lodash.omit": "^4.5.0",
    "memoize-one": "^5.1.1",
    "polished": "^4.1.2",
    "react-use-gesture": "^9.1.3",
    "resize-observer-polyfill": "^1.5.1",
    "rxjs": "^6.6.3",
    "stylis": "^4.0.10"
  },
  "peerDependencies": {
    "react": "^16.8.6 || ^17.0.1",
    "react-dom": "^16.8.6 || ^17.0.1",
    "styled-components": "^4.4.1 || ^5.2.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/user-event": "^13.1.3",
    "babel-jest": "^26.6.3",
    "jest-styled-components": "^7.0.3",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rimraf": "^3.0.2",
    "styled-components": "^5.2.0",
    "ts-jest": "^26.5.5"
  }
}
